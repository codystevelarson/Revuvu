@model Revuvu.UI.Models.PageVM

@{
    ViewBag.Title = "Pages";
}

<div class="container">
    <h2>Pages</h2>
    <hr />

    @Html.ActionLink("Add Page", "AddPage", null, new { @class = "btn btn-primary btn-lg" })

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Page ID</th>
                        <th>Title</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var page in Model.Pages)
                    {
                        <tr>
                            <td>@page.PageId</td>
                            <td> <a href='/Home/Page/@page.PageId'>@page.PageTitle</a> </td>
                            <td>@Html.ActionLink("Edit", "EditPage", "Admin", new { id = page.PageId }, new { @class = "btn btn-info" })</td>
                            <td align="left">@Html.ActionLink("Delete", "DeletePage", "Admin", new { id = page.PageId }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete this pages?')" })</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


</div>
