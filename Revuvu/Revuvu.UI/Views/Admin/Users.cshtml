@model Revuvu.UI.Models.UserGroupVM

@{
    ViewBag.Title = "Users";
}

<div class="container">
    <h2 id="page-header-name">Users</h2>

    @Html.ActionLink("Add User", "AddUser", null, new { @class = "btn btn-primary btn-lg" })
    <hr />
    <div class="row">
        <div class="col-md-12">
            <h3>Admins:</h3>
        </div>
        <div class="table table-condensed" style="font-size:18px">
            <div class="col-md-12">
                <table class=" table table-hover">
                    <thead style="font-weight:bold">
                        <tr>
                            <td align="left">Username</td>
                            <td align="left">Email</td>
                            <td align="left">Role</td>
                            <td align="left"></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Admins)
                        {
                            <tr class="table-primary">
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                                <td>@user.Role</td>
                                <td align="right">@Html.ActionLink("Edit User", "EditUser", new { user.Id }, new { @class = "btn btn-info" })</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h3>Marketing:</h3>
        </div>
        <div class="table table-condensed" style="font-size:18px">
            <div class="col-md-12">
                <table class=" table table-hover">
                    <thead style="font-weight:bold">
                        <tr>
                            <td align="left">Username</td>
                            <td align="left">Email</td>
                            <td align="left">Role</td>
                            <td align="left"></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Marketing)
                        {
                            <tr class="table-primary">
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                                <td>@user.Role</td>
                                <td align="right">@Html.ActionLink("Edit User", "EditUser", new { user.Id }, new { @class = "btn btn-info" })</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h3>Users:</h3>
        </div>
        <div class="table table-condensed" style="font-size:18px">
            <div class="col-md-12">
                <table class="table table-hover ">
                    <thead style="font-weight:bold">
                        <tr>
                            <td align="left">Username</td>
                            <td align="left">Email</td>
                            <td align="left">Role</td>
                            <td align="left"></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr class="table-success">
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                                <td>@user.Role</td>
                                <td align="right">@Html.ActionLink("Edit User", "EditUser", new { user.Id }, new { @class = "btn btn-info" })</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h3>Disabled:</h3>
        </div>
        <div class="table table-condensed" style="font-size:18px">
            <div class="col-md-12">
                <table class="table table-hover">
                    <thead style="font-weight:bold">
                        <tr>
                            <td align="left">Username</td>
                            <td align="left">Email</td>
                            <td align="left">Role</td>
                            <td align="left"></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Disabled)
                        {
                            <tr class="table-danger">
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                                <td>@user.Role</td>
                                <td align="right">@Html.ActionLink("Edit User", "EditUser", new { user.Id }, new { @class = "btn btn-info" })</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

